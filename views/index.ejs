<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>TkVault</title>
  <link rel="stylesheet" type="text/css" href="css/style.css">
</head>
<body>
  <div class="title">
    TkVault
    <div class="subtitle">
      File Upload System
    </div>
    <div class="title">
      <img src="https://media.tenor.com/7GzWtl6kvcgAAAAi/bocchi-the-rock.gif">
    </div>
  </div>
  <form action="/upload" method="post" enctype="multipart/form-data">
    <input type="file" name="file" required>
    <button type="submit">Upload</button>
    <p>12 MB upload limit.</p>
  </form>

  <!-- List of uploaded files -->
  <h2>Uploaded Files:</h2>
  <ul id="fileList">
    <% files.forEach(file => { %>
      <li>
        <a href="/uploads/<%= file.fileName %>"><%= file.fileName %></a>
        <p>Uploader's IP: <%= file.uploaderIP %></p>
        <p>Time of upload: <%= new Date(file.uploadTime).toLocaleString() %></p>
      </li>
    <% }); %>
  </ul>
</body>
</html>